{
  "files.associations": {
    "wrangler.json": "jsonc"
  },
  "files.exclude": {
      ".next": true,
      "node_modules": true,
      ".wrangler": true,
      "tsconfig.tsbuildinfo": true,
      "coverage": true,
      ".open-next": true,
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
  },
  "search.exclude": {
    ".claude": true,
    ".cursor": true,
    ".gemini": true,
    ".github/chatmodes": true,
  },
  "cSpell.words": [
    "autoincrement",
    "bmad",
    "bookmarkable",
    "Contentful",
    "Frontmatter",
    "gettravelvisa",
    "Jitsu",
    "languagedetector",
    "libsql",
    "lintstagedrc",
    "opennext",
    "opennextjs",
    "pkill",
    "resequenced",
    "sitemapindex",
    "subheadline",
    "Turbopack",
    "Turkiye",
    "unixepoch",
    "updateable",
    "upsell"
  ],
  "chat.agent.enabled": true,
  "chat.agent.maxRequests": 5000,
  "github.copilot.chat.agent.runTasks": true,
  "chat.mcp.discovery.enabled": true,
  "github.copilot.chat.agent.autoFix": true,
  "chat.tools.terminal.autoApprove": {
    "pnpm": true,
    "git": true,
    "npm": true,
  }
}