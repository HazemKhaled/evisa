{
  "name": "gettravelvisa",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "db:generate": "bash -c 'export $(cat .env.local | grep -v \"^#\" | grep -v \"^$\" | xargs) && drizzle-kit generate'",
    "db:migrate": "bash -c 'export $(cat .env.local | grep -v \"^#\" | grep -v \"^$\" | xargs) && drizzle-kit migrate'",
    "db:push": "bash -c 'export $(cat .env.local | grep -v \"^#\" | grep -v \"^$\" | xargs) && drizzle-kit push'",
    "db:studio": "bash -c 'export $(cat .env.local | grep -v \"^#\" | grep -v \"^$\" | xargs) && drizzle-kit studio'",
    "db:seed": "bash -c 'export $(cat .env.local | grep -v \"^#\" | grep -v \"^$\" | xargs) && tsx scripts/seed.ts'",
    "db:local:create": "wrangler d1 create gettravelvisa-db-local",
    "db:local:migrate": "wrangler d1 migrations apply gettravelvisa-db-local --local",
    "db:local:seed": "wrangler d1 execute gettravelvisa-db-local --local --file=./drizzle/seed.sql",
    "db:local:reset": "wrangler d1 execute gettravelvisa-db-local --local --file=./scripts/reset.sql",
    "db:local:studio": "bash -c 'pkill -f \"drizzle-kit studio\" 2>/dev/null || true && export $(cat .env.local | grep -v \"^#\" | grep -v \"^$\" | xargs) && LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name \"*.sqlite\" -print -quit) drizzle-kit studio --port 4984'",
    "db:local:query": "pnpm wrangler d1 execute gettravelvisa-db-local --local --command",
    "db:local:setup": "pnpm db:local:reset && pnpm db:local:migrate && pnpm db:local:seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "prepare": "husky"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.6.5",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.5",
    "i18next": "^25.4.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-resources-to-backend": "^1.2.1",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^15.7.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@jest/types": "^30.0.5",
    "@libsql/client": "^0.15.14",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.1.2",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "wrangler": "^4.33.0"
  }
}
