{
  "name": "gettravelvisa",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix && pnpm format",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "wrangler:dev": "wrangler dev",
    "db:local:apply": "wrangler d1 migrations apply gtv-db --local",
    "db:prod:apply": "wrangler d1 migrations apply gtv-db --remote",
    "db:local:list": "wrangler d1 migrations list gtv-db --local",
    "db:prod:list": "wrangler d1 migrations list gtv-db --remote",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --detectOpenHandles",
    "bundle-analyze": "ANALYZE=true pnpm build",
    "prepare": "husky"
  },
  "dependencies": {
    "@mdx-js/loader": "3.1.1",
    "@mdx-js/mdx": "3.1.1",
    "@mdx-js/react": "3.1.1",
    "@next/mdx": "15.4.7",
    "@opennextjs/cloudflare": "1.8.2",
    "@sentry/nextjs": "10.11.0",
    "@types/mdx": "2.0.13",
    "clsx": "2.1.1",
    "gray-matter": "4.0.3",
    "i18next": "25.5.2",
    "i18next-browser-languagedetector": "8.2.0",
    "i18next-resources-to-backend": "1.2.1",
    "import-in-the-middle": "^1.14.2",
    "next": "15.4.7",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-i18next": "15.7.3",
    "remark-gfm": "4.0.1",
    "server-only": "0.0.1",
    "tailwind-merge": "3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@jest/types": "30.0.5",
    "@next/bundle-analyzer": "^15.5.3",
    "@tailwindcss/postcss": "4.1.13",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "30.0.0",
    "@types/node": "22.18.1",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "drizzle-kit": "0.31.4",
    "drizzle-orm": "0.44.5",
    "eslint": "9.35.0",
    "eslint-config-next": "15.4.7",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-i18next": "6.1.3",
    "eslint-plugin-react-hooks": "5.2.0",
    "husky": "9.1.7",
    "jest": "30.1.3",
    "jest-environment-jsdom": "30.1.2",
    "lint-staged": "16.1.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "tailwindcss": "4.1.13",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "wrangler": "4.36.0"
  }
}
