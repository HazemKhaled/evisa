# Base URL for the application
NEXT_PUBLIC_BASE_URL=https://gettravelvisa.com

# Cloudflare D1 database ID 
# Get ID from: Cloudflare Dashboard > D1 > Your Database > Database ID
CLOUDFLARE_D1_DATABASE_ID=your-d1-database-id

# Cloudflare API token with D1:Edit permissions
# Create at: Cloudflare Dashboard > My Profile > API Tokens > Create Token
# Template: "Custom token" with Account:read, Zone:read, D1:edit permissions
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# =============================================================================
# APPLICATION CONFIGURATION (Optional)
# =============================================================================
# Public base URL for the application (used for sitemaps and SEO)
# Defaults to https://gettravelvisa.com if not set
NEXT_PUBLIC_BASE_URL=https://gettravelvisa.com

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Sentry DSN for error tracking and performance monitoring
# Get from: https://sentry.io/settings/projects/your-project/keys/
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# DO NOT commit this file to your repository!
# The SENTRY_AUTH_TOKEN variable is picked up by the Sentry Build Plugin.
# It's used for authentication when uploading source maps.
# You can also set this env variable in your own `.env` files and remove this file.
SENTRY_AUTH_TOKEN=

SENTRY_ORG=tcf-sala
SENTRY_PROJECT=gtv

